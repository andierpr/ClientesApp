@model ClientesApp.Models.Cliente

<div class="container mt-4">
    <h2>Detalhes do Cliente</h2>

    <ul>
        <li><strong>Nome:</strong> @Model.Nome</li>
        <li><strong>Email:</strong> @Model.Email</li>
        <li><strong>Telefone:</strong> @Model.TelefoneExibicao</li>
        <li><strong>Estado:</strong> @Model.NomeEstadoExibicao</li>
        <li><strong>UF:</strong> @Model.UFExibicao</li>
    </ul>

    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
