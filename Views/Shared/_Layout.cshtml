<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - ClientesApp</title>

    <!-- CSS Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- CSS do projeto -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClientesApp.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-3">
            <div class="container-fluid">

                <!-- LOGO -->
                <a class="navbar-brand fw-bold"
                   asp-controller="Home"
                   asp-action="Index">
                    ClientesApp
                </a>

                <!-- TOGGLER MOBILE -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Alternar navegação">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNavbar"
                     class="navbar-collapse collapse d-sm-inline-flex justify-content-between align-items-center">

                    <!-- MENU PRINCIPAL -->
                    <ul class="navbar-nav flex-grow-1 gap-sm-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Estados" asp-action="Index">Estados (UF)</a>
                        </li>

                        @* 🔒 MENU ADMIN *@
                        @if (User.Identity?.IsAuthenticated == true && User.IsInRole("Administrador"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Usuários
                                </a>
                                <ul class="dropdown-menu dropdown-menu-start">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Usuarios" asp-action="Index">
                                            Listar Usuários
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Usuarios" asp-action="Novo">
                                            Novo Usuário
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- USUÁRIO LOGADO / LOGOUT -->
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="d-flex align-items-center gap-2">
                            <span class="fw-semibold">Olá, @User.Identity.Name</span>
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger btn-sm">Sair</button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1 container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-auto py-2">
        <div class="container">
            &copy; 2026 - ClientesApp - <a asp-controller="Home" asp-action="Privacy">Privacidade</a>
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
