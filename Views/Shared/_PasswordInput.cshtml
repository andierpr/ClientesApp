@model string
@{
    var id = ViewData["Id"]?.ToString() ?? "Senha";
    var label = ViewData["Label"]?.ToString() ?? "Senha";
}

<div class="mb-3 position-relative">
    <label class="form-label" for="@id">@label</label>
    <input asp-for="@Model" class="form-control" id="@id" />
    <button type="button" class="btn btn-sm btn-outline-secondary position-absolute top-0 end-0 mt-2 me-2"
            onclick="togglePassword('@id', this)">
        👁️
    </button>
    <span asp-validation-for="@Model" class="text-danger"></span>
</div>
