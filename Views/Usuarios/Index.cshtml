@model IEnumerable<ClientesApp.Models.Usuario>

@{
    ViewData["Title"] = "Usuários";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">👥 Usuários</h2>

        <a asp-action="Novo" class="btn btn-success">
            ➕ Novo Usuário
        </a>
    </div>

    @if (TempData["msg"] is not null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <table class="table table-striped table-hover shadow-sm align-middle">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Login</th>
                <th>Email</th>
                <th>Status</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>

        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">
                        Nenhum usuário cadastrado.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Nome</td>
                        <td>@(string.IsNullOrWhiteSpace(user.Login) ? "-" : user.Login)</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge @(user.Ativo ? "bg-success" : "bg-secondary")">
                                @(user.Ativo ? "Ativo" : "Inativo")
                            </span>
                        </td>
                        <td class="text-center">
                            <a asp-action="Editar"
                               asp-route-id="@user.IdUsuario"
                               class="btn btn-sm btn-primary">
                                ✏️ Editar
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>
