@model ClientesApp.Models.Estado

<div class="container mt-4">
    <h2>Editar Estado (UF)</h2>

    <form asp-action="Edit" method="post">

        <input type="hidden" asp-for="IdEstado" />

        <div class="mb-3">
            <label class="form-label">UF</label>
            <input asp-for="UF" class="form-control" maxlength="2" />
            <span asp-validation-for="UF" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Nome do Estado</label>
            <input asp-for="NomeEstado" class="form-control" />
            <span asp-validation-for="NomeEstado" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
